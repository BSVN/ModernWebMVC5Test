{
  "compilerOptions": {
    "lib": ["DOM", "ES6"],
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES5",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compileOnSave": false
}
